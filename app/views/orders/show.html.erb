<div class="container margin-top-40 no-border">
    <div class="col-md-12">
        <!-- 寄送资讯 -->
        <div class="shipping-detail cart-index">
            <div class="top">
                <span>支付订单</span>
            </div>
            <div class="middle">
                <br>
                <h1>提交订单成功</h1>
                <p>请在 24 小时内完成支付，超时订单将自动取消</p>
                <p>我们将在您完成支付后的 72 小时内发货</p>
                <% if !@order.is_paid? %>
                <div class="group pull-right">
                    <%= link_to("", pay_with_alipay_order_path(@order.token), :method => :post, :class => "pay-button alipay-button") %>

                    <%= link_to("", pay_with_wechat_order_path(@order.token), :method => :post, :class => "pay-button weixinpay-button") %>
                </div>
            <% else %>
                <p class="text-center" style="color:red;">此订单已完成付款</p>
                <% end %>
            </div>
        </div>

        <!-- 订单明细 -->
        <div class="product-order-item margin-top-40">
            <hr>
            <div class="product-item-title ">
                <div class="col-md-6">
                    商品信息
                </div>
                <div class="col-md-6">
                    <div class="col-sm-4 pull-right">
                        小计
                    </div>
                    <div class="col-sm-4 pull-right">
                        数量
                    </div>
                    <div class="col-sm-4 pull-right">
                        单价
                    </div>
                </div>
            </div>
            <hr>
            <% @product_lists.each do |product_list| %>
            <div class="product-item-detail">
                <div class="col-md-6">
                    <%= product_list.product_name %>
                </div>
                <div class="col-md-6">
                    <div class="col-sm-4 pull-right">
                        <%= product_list.product_price * product_list.quantity %>
                    </div>
                    <div class="col-sm-4 pull-right">
                        <%= product_list.quantity %>
                    </div>
                    <div class="col-sm-4 pull-right">
                        <%= product_list.product_price %>
                    </div>
                </div>
            </div>
            <hr>
            <% end %>
            <div class="pull-right margin-top-40">
                总计
                <%= @order.total %>
                CNY
            </div>
        </div>
        <br>
        <div class="confirm-detail">
            <div class="info-title">订单编号</div>
            <p class="info-detail"><%= @order.created_at.to_s(:number)[2,12]%><%= @order.token[0,4]%></p>
        </div>
        <div class="confirm-detail">
            <div class="info-title">收货信息</div>
            <p class="info-detail">姓名：<%= @order.shipping_name %></p>
            <p class="info-detail">详细地址：<%= @order.shipping_address %></p>
        </div>
        <hr>
    </div>
</div>
