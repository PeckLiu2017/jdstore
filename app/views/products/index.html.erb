<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="slideshow-container">
      <%= @products.each_with_index do |product,index|%>
      <% if product.category.name === "酷炫应用"  %>
        <div class="mySlides fade">
            <div class="numbertext"><%= index %> / 3</div>
            <img src="img1.jpg" style="width:100%">
            <div class="text">Caption Text</div>
        </div>
        <% end %>
      <% end %>
        <!-- <div class="mySlides fade">
            <div class="numbertext">3 / 3</div>
            <img src="img3.jpg" style="width:100%">
            <div class="text">Caption Three</div>
        </div>
 -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>

    <br>

    <div style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
    </div>
</div>

<div class="row">
    <div class="container">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>智享生活</h3>
                </div>
                <div class="panel-body">
                    <% @products.each do |product| %>
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="product-items-<%=product.id%>" data-id="<%=product.id%>">
                            <%= link_to product_path(product) do %>
                            <% if product.photos.present? %>
                            <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail",id:"#{product.id}") %>
                        <% else %>
                            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                            <% end %>
                            <% end %>
                            <%= product.title %>
                            ￥
                            <%= product.price %>

                        </div>
                        <!-- 收藏和加入购物车 -->
                        <div class="product-options">
                            <a href="/products/<%= product.id %>/join" class="add-to-whishlist" data-toggle="tooltip" data-placement="top" title="Wishlist">
                                <i class="fa fa-heart-o"></i>
                            </a>
                            <%= link_to add_to_cart_product_path(product), :method => :post, class: "addCartBtn ", id:"#{product.id}",:remote => true do %>
                            <i class="fa fa-shopping-cart col-red"></i>
                            <% end %>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>

    </div>
</div>

