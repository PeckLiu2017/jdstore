                                                    <div class="operation-list"></div>
                                                </div>
                                                <div class="num">1</div>
                                                <div class="price">¥ 199.00</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="prod-operation">
                                        <div class="total">¥ 199.00</div>
                                        <div class="status">
                                            已关闭
                                        </div>
                                    </div>


                        </div>

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>生成时间</th>

                                </tr>
                            </thead>
                            <tbody>

                                <% @orders.each do |order| %>
                                <tr>
                                    <td>
                                        <%= link_to order.id, order_path(order.token) %>
                                    </td>
                                    <td>
                                        <%= order.created_at.to_s(:long) %>
                                    </td>
                                </tr>
                                <% end %>

                            </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>

</div>
