<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="order-information">
        <h3>商品评价</h3>
        <p>订单号:</p>
        <%#= render 'form', comment: @comment %>
        <%#= link_to 'Back', comments_path %>
    </div>
</div>


<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for [@product,@comment] do |f| %>
    <div class="productDetail-evaluation w200 bc mt20 mb20">
      <div class="intro-text-count clearfix mt10">
        <div class="fl mr10">味道: </div>
        <div id="star-rating"></div>
      </div>
      <div class="intro-text-count clearfix mt10">
        <div class="fl mr10">外观: </div>
        <div id="star-look"></div>
      </div>
      <div class="intro-text-count clearfix mt10">
        <div class="fl mr10">价格: </div>
        <div id="star-price"></div>
      </div>
    </div>
    <div class="form-group">
      <%= f.input :content, label: "内容", input_html: { class: "form-control"} %>
    </div>

    <div class="from-group">
      <%= f.label :配图 %><br>

      <%= f.file_field :picture, :multiple => true, name: "comment_pictures[picture][]" %>
    </div>
    <div class="form-actions">
      <%= f.submit "提交", disable_with: "Submiting...", class: "btn btn-default"%>
    </div>
  <% end %>
</div>
