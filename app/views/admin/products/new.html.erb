<h2> New Product </h2>
<%= simple_form_for [:admin,@product] do |f| %>
<div class="group">
  <%= f.input :title %>
</div>

<div class="group">
  <%= f.input :description %>
</div>

<div class="group">
  <%= f.input :quantity %>
</div>

<div class="group">
  <%= f.input :price %>
</div>

<div class="group">
  <%= f.label :photos %><br>
  <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]" %>
</div>

<div class="group">
  <%= f.label :introduce_pictures %><br>
  <%= f.file_field :avatar, :multiple => true, name: "introduce_pictures[avatar][]" %>
</div>

<div class="group">
  <%= select_tag(:category_id, options_for_select(@categories)) %>
</div>

<div class="group">
  <%= f.input :tag %>
</div>

<%= f.submit "Submit",:class=>"btn btn-default",data:{disable_with: "Submitting..."}  %>
<% end %>
<script type="text/javascript">
  autosize($('#product_description'));
</script>
